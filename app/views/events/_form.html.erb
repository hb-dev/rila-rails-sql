<%= bootstrap_form_for(@event, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10") do |f| %>
  <%= f.alert_message "Please fix the errors below." %>

  <%= f.text_field :name %>
  <%= f.text_field :event_date, type: :date %>
  <div class="form-group">
    <div class="col-sm-10 col-sm-offset-2">
        <%= f.submit %>
    </div>
  </div>

<% end %>
