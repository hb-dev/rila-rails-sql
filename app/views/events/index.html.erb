<h1 class="page-header">
  <%= @page_topic %>
  <%= link_to "#{icon :plus} Neue Veranstaltung", new_event_path, class: "btn btn-primary pull-right" %>
</h1>
<div class="table-responsive">
  <table class="table table-condensed table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Datum</th>
        <th>Anmeldungen</th>
        <th>Bezahlt</th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= link_to event.name, event %></td>
          <td><%= l event.event_date %></td>
          <td><%= event.enrollments.count%></td>
          <td><%= event.enrollments.payed.count%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
