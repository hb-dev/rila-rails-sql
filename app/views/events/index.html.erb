<%= page_header "Veranstaltungen" %>

<table class="table table-responsive table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Datum</th>
      <th>Anmeldungen</th>
      <th>Bezahlt</th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to event.name, event %></td>
        <td><%= l event.event_date %></td>
        <td>240</td>
        <td>140</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

