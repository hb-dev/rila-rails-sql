<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form', :class => 'form-signin'}) do |f| %>
    <h2 class="form-signin-heading">Bitte anmelden</h2>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%- if devise_mapping.registerable? %>
        <%= link_to 'Sign up', new_registration_path(resource_name), class: 'right'  %>
      <% end -%>
      <%= f.label :email, "E-Mail" %>
      <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%- if devise_mapping.recoverable? %>
        <%= link_to "Passwort vergessen?", new_password_path(resource_name), class: 'right' %>
      <% end -%>
      <%= f.label :password, "Passwort" %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>
      <%= f.submit 'Anmelden', :class => 'btn btn-lg btn-primary btn-block' %>
      <% if devise_mapping.rememberable? -%>
        <label class="checkbox">
          <%= f.check_box :remember_me %> Angemeldet bleiben
        </label>
      <% end -%>
  <% end %>
</div>